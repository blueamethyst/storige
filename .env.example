# ===========================================
# Storige Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# IMPORTANT: Change all passwords and secrets in production!

# ===========================================
# Database Configuration (MariaDB 11.2)
# ===========================================
MYSQL_ROOT_PASSWORD=your-secure-root-password-here
DATABASE_USER=storige
DATABASE_PASSWORD=your-secure-database-password-here
DATABASE_NAME=storige
DATABASE_HOST=mariadb
DATABASE_PORT=3306

# ===========================================
# API Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# API Server
NODE_ENV=production
API_PORT=4000

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ===========================================
# Worker Configuration
# ===========================================
WORKER_PORT=4001
MAX_RETRY_ATTEMPTS=3
GHOSTSCRIPT_PATH=/usr/bin/gs

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Storage Configuration
# ===========================================
STORAGE_PATH=/app/storage
STORAGE_BASE_URL=http://localhost/storage

# ===========================================
# Nginx Configuration
# ===========================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# ===========================================
# API Key Authentication (for bookmoa integration)
# ===========================================
# Comma-separated list of valid API keys
# Generate secure keys: openssl rand -hex 32
API_KEYS=your-api-key-1,your-api-key-2

# ===========================================
# bookmoa Integration
# ===========================================
# bookmoa DB connection (read-only, for member validation)
# BOOKMOA_DB_HOST=localhost
# BOOKMOA_DB_PORT=3306
# BOOKMOA_DB_USER=bookmoa_reader
# BOOKMOA_DB_PASSWORD=your-secure-password
# BOOKMOA_DB_NAME=bookmoa

# ===========================================
# Production URLs (Change for production)
# ===========================================
# VITE_API_BASE_URL=https://yourdomain.com/api
# STORAGE_BASE_URL=https://yourdomain.com/storage
# CORS_ORIGIN=https://yourdomain.com
