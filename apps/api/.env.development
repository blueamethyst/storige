# ===========================================
# Storige Platform - Development Environment
# ===========================================

# ===========================================
# Database Configuration (MariaDB 11.2)
# ===========================================
DATABASE_USER=storige
DATABASE_PASSWORD=storagepassword
DATABASE_NAME=storige
DATABASE_HOST=localhost
DATABASE_PORT=3306

# ===========================================
# API Configuration
# ===========================================
JWT_SECRET=dev-secret-key-for-local-development-only-change-in-production
JWT_EXPIRES_IN=24h

# API Server
NODE_ENV=development
API_PORT=4000

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:8080

# ===========================================
# Worker Configuration
# ===========================================
WORKER_PORT=4001
MAX_RETRY_ATTEMPTS=3
GHOSTSCRIPT_PATH=/usr/bin/gs

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Storage Configuration
# ===========================================
STORAGE_PATH=./storage
STORAGE_BASE_URL=http://localhost:4000/api/storage

# ===========================================
# Admin Account (Auto-created on startup)
# ===========================================
ADMIN_EMAIL=admin@storige.com
ADMIN_PASSWORD=admin1234
